<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login User DashBoard</title>
    <link rel="stylesheet" href="/loginUser.css">
    <link rel="icon" href="https://res.cloudinary.com/diuy2xilf/image/upload/v1727609897/Screenshot_2024-05-18_163234-removebg-preview_l3x0bf.png" type="image/png">
</head>
<body>
    <%- include('./message.ejs', { success: success, error: error }) %>

    <div class="login-container">
        <div class="login-card">
            <h2>Welcome Back!</h2>
            <form class="login-form" action="/login" method="post">
                <div class="form-group">
                    <label for="username">Email Address</label>
                    <input type="text" id="username" name="email" placeholder="Enter your Email Address" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter your password" required>
                </div>
                <button type="submit" class="login-btn">Login</button>
            </form>
            <div class="google-login-container">
                <h3>Or</h3>
                <a href="/auth/google" class="google-login-btn">Login with Google</a>
            </div>
            <p class="forgot-password"><a href="/register">Sign Up</a></p>
            <p class="forgot-password"><a href="/forgetPassword">Forget Password ?</a></p>
        </div>
    </div>
</body>
</html>
